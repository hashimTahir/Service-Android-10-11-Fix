<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" tools:ignore="ResourceName">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="10dp"/>
            <solid android:color="#9067A7EA" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="10dp"/>
            <gradient
                android:angle="90"
                android:gradientRadius="4dp"
                android:endColor="#D5DAE6"
                android:startColor="#EBEDF3"
                android:type="linear" />
        </shape>
    </item>
</selector>